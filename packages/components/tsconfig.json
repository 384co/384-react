{
  "compilerOptions": {
    "module": "esnext",
    "target": "ES2022",
    "lib": [
      "es2020",
      "dom"
    ],
    "jsx": "preserve",
    "moduleResolution": "node",
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "experimentalDecorators": true,
    "baseUrl": "./",
    "allowSyntheticDefaultImports": true,
    "noErrorTruncation": false,
    "allowJs": true,
    "skipLibCheck": true,
    "paths": {
      "@384/components": [
        "./packages/components/src"
      ]
    },
    "types": [
      "node",
      "react"
    ]
  },
  "include": [
    "./src"
, "playing/Login", "playing/UserRegistration", "playing/DropZone", "playing/Invite", "playing/UserLogin", "todo/UserRegistration", "todo/UserLogin", "todo/Invite", "todo/Login", "todo/DropZonee", "../core/src/contexts/MUI"  ],
  "exclude": [
    "./todo",
    "**/.*/",
    "**/build",
    "**/cypress",
    "**/node_modules",
    "**/test"
  ]
}
