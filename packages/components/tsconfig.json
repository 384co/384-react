{
  "compilerOptions": {
    "module": "esnext",
    "target": "es5",
    "lib": [
      "es2020",
      "dom"
    ],
    "jsx": "preserve",
    "moduleResolution": "node",
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "experimentalDecorators": true,
    "baseUrl": "./",
    "allowSyntheticDefaultImports": true,
    "noErrorTruncation": false,
    "allowJs": true,
    "skipLibCheck": true,
    "paths": {
      "@384/components": [
        "./packages/components/src"
      ]
    },
    "types": [
      "node",
      "react"
    ]
  },
  "include": [
    "./src"
  ],
  "exclude": [
    "**/.*/",
    "**/build",
    "**/cypress",
    "**/node_modules",
    "**/test"
  ]
}
