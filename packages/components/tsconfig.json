{
  "compilerOptions": {
    "module": "esnext",
    "target": "ES2022",
    "lib": ["es2020", "dom"],
    "jsx": "preserve",
    "moduleResolution": "node",
    "forceConsistentCasingInFileNames": true,
    "strict": true,
    "experimentalDecorators": true,
    "baseUrl": "./",
    "allowSyntheticDefaultImports": true,
    "noErrorTruncation": false,
    "allowJs": true,
    "skipLibCheck": true,
    "paths": {
      "@384/components": ["./packages/components/src"]
    },
    "types": ["node", "react"]
  },
  "include": ["./src"],
  "exclude": [
    "./src/v3",
    "./todo",
    "**/.*/",
    "**/build",
    "**/cypress",
    "**/node_modules",
    "**/test"
  ]
}
